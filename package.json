{
    "name": "@forfuture/wserver",
    "version": "0.2.0",
    "description": "WebSocket Server",
    "main": "dist/lib/index",
    "bin": {
        "wserver-connect": "bin/wserver-connect"
    },
    "typings": "typings.d.ts",
    "scripts": {
        "precommit": "npm run build && git add dist",
        "prebuild": "rimraf dist",
        "build": "tsc --project .",
        "format": "prettier --write '{lib,script,types}/**/*.{js,ts}' '*.{js,json,md}'",
        "test": "npm run test:format",
        "test:format": "prettier --check '{lib,script,types}/**/*.{js,ts}' '*.{js,json,md}'"
    },
    "dependencies": {
        "commander": "^14.0.1",
        "debug": "^4.4.3",
        "uuid": "^13.0.0",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@types/debug": "^4.1.12",
        "@types/node": "^22.18.12",
        "@types/ws": "^8.18.1",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "typescript": "^5.9.3"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.9"
    },
    "prettier": {
        "arrowParens": "always",
        "endOfLine": "lf",
        "tabWidth": 4,
        "trailingComma": "all"
    }
}
